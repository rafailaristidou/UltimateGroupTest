@{
    ViewData["Title"] = "Simple Inventory";
}

<div class="text-center">
    <h1 class="display-4">Simple Inventory</h1>
    <p class="lead">Manage your products and categories</p>
    
    <div class="row justify-content-center mt-5">
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Products</h5>
                    <p class="card-text">View, create, edit, and delete products. Search by name or SKU, filter by category, and sort by name or price.</p>
                    <div class="mt-auto">
                        <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-lg w-100">Manage Products</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Categories</h5>
                    <p class="card-text">View and create product categories. Organize your products into logical groups.</p>
                    <div class="mt-auto">
                        <a asp-controller="Categories" asp-action="Index" class="btn btn-success btn-lg w-100">Manage Categories</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="mt-4">
        <p class="text-muted">
            <small>API endpoints available at <a href="/swagger" target="_blank">/swagger</a></small>
        </p>
    </div>
</div>
