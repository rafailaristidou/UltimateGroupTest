@model IEnumerable<SimpleInventory.Domain.Entities.Category>
@{
    ViewData["Title"] = "Categories";
}

<h2>Categories</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">Create Category</a>
    <a asp-controller="Products" asp-action="Index" class="btn btn-secondary">View Products</a>
    </div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th class="text-end">Products</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td class="text-end">@item.Products.Count</td>
            <td class="text-end">
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>


