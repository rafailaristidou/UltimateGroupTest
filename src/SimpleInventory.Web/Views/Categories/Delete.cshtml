@model SimpleInventory.Domain.Entities.Category
@{
    ViewData["Title"] = "Delete Category";
}

<h2>Delete Category</h2>

<div class="alert alert-warning">Are you sure you want to delete this category?</div>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>
    <dt class="col-sm-2">Products</dt>
    <dd class="col-sm-10">@Model.Products.Count</dd>
</dl>

@if(!ViewData.ModelState.IsValid)
{
    <div class="text-danger">@ViewData.ModelState[string.Empty]?.Errors.FirstOrDefault()?.ErrorMessage</div>
}

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button class="btn btn-danger" type="submit">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>


